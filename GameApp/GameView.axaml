<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GameApp.ViewModels;assembly=GameApp"
	x:Class="GameApp.Views.GameView"
	x:DataType="vm:PlayerAnimationViewModel"
	Title="Platformer - Textures"
	Width="1920" Height="1080"
	Focusable="True">

	<Canvas x:Name="MainCanvas" Background="LightBlue">

		<Rectangle Canvas.Left="0" Canvas.Top="0"
                   Width="1920" Height="1080"
                   Fill="Transparent"
                   Stroke="Gray"
                   StrokeThickness="1"
                   StrokeDashArray="5,5"/>

		<Image x:Name="PlayerImage"
               Width="150"
               Height="150"
               Canvas.Left="{Binding X}"
               Canvas.Top="{Binding Y}"
               Source="{Binding CurrentFrameBitmap}"/>

		<TextBlock Canvas.Left="10" Canvas.Top="10"
                   Text="{Binding X, StringFormat='X: {0:F1}'}"
                   Foreground="Black" FontSize="16"/>
		<TextBlock Canvas.Left="10" Canvas.Top="40"
                   Text="{Binding Y, StringFormat='Y: {0:F1}'}"
                   Foreground="Black" FontSize="16"/>
		<TextBlock Canvas.Left="10" Canvas.Top="70"
                   Text="{Binding IsOnGround, StringFormat='On Ground: {0}'}"
                   Foreground="Black" FontSize="16"/>
		<TextBlock Canvas.Left="10" Canvas.Top="100"
                   Text="Platforms from code"
                   Foreground="DarkGreen" FontSize="16" FontWeight="Bold"/>

		<!-- Подсказка по управлению -->
		<TextBlock Canvas.Left="10" Canvas.Top="1040"
                   Text="Controls: WASD or arrows, Space to jump"
                   Foreground="Black" FontSize="14"/>
	</Canvas>
</Window>