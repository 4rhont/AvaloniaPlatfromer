<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GameApp.Core.ViewModels;assembly=GameApp.Core"
        x:Class="GameApp.Views.GameView"
        Title="Simple Platformer Test - Game Loop"
        Width="400" Height="400"
        Focusable="True">
    
    <Design.DataContext>
        <vm:GameViewModel />
    </Design.DataContext>

    <Canvas Background="LightBlue" x:DataType="vm:GameViewModel">
        <!-- Игрок (красный кружок) -->
        <Ellipse Width="50" Height="50" 
                 Fill="Red" 
                 Stroke="DarkRed" 
                 StrokeThickness="2"
                 Canvas.Left="{Binding PlayerX}"
                 Canvas.Top="{Binding PlayerY}"/>
        
        <!-- Статический элемент (платформа) -->
        <Rectangle Canvas.Left="50" Canvas.Top="300" 
                   Width="300" Height="20" 
                   Fill="Green"/>
        
        <!-- Отладочная информация -->
        <TextBlock Canvas.Left="10" Canvas.Top="10" 
                   Text="{Binding PlayerX, StringFormat='X: {0:F1}'}" 
                   Foreground="Black" FontSize="12"/>
        <TextBlock Canvas.Left="10" Canvas.Top="30" 
                   Text="{Binding PlayerY, StringFormat='Y: {0:F1}'}" 
                   Foreground="Black" FontSize="12"/>
        
        <!-- Подсказка по управлению -->
        <TextBlock Canvas.Left="10" Canvas.Top="370" 
                   Text="Controls: WASD or arrows" 
                   Foreground="Black" FontSize="10"/>
    </Canvas>
</Window>