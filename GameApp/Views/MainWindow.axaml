<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GameApp.Views.MainWindow"
        Title="Game Launcher"
        Width="300" Height="200">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="Simple Platformer Test" FontSize="16" HorizontalAlignment="Center"/>
        <Button HorizontalAlignment="Center"  Content="Start Game" Click="StartGame_Click" Width="100"/>
        <CheckBox x:Name="DebugCheckBox" Content="Debug Mode" IsChecked="True" HorizontalAlignment="Center"/>
        <TextBlock Text="Controls: WASD or Arrow Keys" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>