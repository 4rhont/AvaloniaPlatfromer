<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GameApp.Views.MainWindow"
        Title="My Game"
        Width="400"
        Height="500"
        Background="Black"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="Button.MenuButton">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>
    
        <Style Selector="Button.MenuButton:pointerover /template/ ContentPresenter">
            <Setter Property="Foreground" Value="Gray" />
        </Style>
    </Window.Styles>

    <StackPanel VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Spacing="20"
                Margin="20">
        
        <TextBlock Text="ROOTS" 
                   FontSize="32" 
                   FontWeight="Bold"
                   Foreground="White"
                   TextAlignment="Center" />
        
        <Button Content="NEW GAME"
                HorizontalAlignment="Center" 
                Click="NewGame_Click"
                Classes="MenuButton" />
        
        <Button Name="LoadGameButton"
                HorizontalAlignment="Center" 
                Content="LOAD GAME"
                Click="LoadGame_Click"
                Classes="MenuButton"
                IsEnabled="False" />
        
        <Border Name="SaveInfoBorder"
                Background="Black"
                BorderBrush="White"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                IsVisible="False">
            
            <StackPanel Spacing="8">
                <TextBlock Text="LAST SAVE" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White" />
                
                <TextBlock Name="SaveTimeText"
                           FontSize="14"
                           Foreground="White" />
                
                <TextBlock Name="SaveLevelText"
                           FontSize="14"
                           Foreground="White" />
            </StackPanel>
        </Border>

        <Border Background="Black"
                BorderBrush="White"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12">
            
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <CheckBox Name="DebugModeCheckBox" 
                          VerticalAlignment="Center"
                          BorderBrush="White"
                          BorderThickness="1" />
                <TextBlock Text="Debug Mode"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="13" />
            </StackPanel>
        </Border>
    </StackPanel>

</Window>
